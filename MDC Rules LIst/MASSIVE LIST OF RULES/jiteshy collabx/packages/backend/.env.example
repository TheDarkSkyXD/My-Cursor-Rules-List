PORT=3001
NODE_ENV=development 

# CORS Configuration for front-end
CORS_ORIGIN=http://localhost:3000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_PREFIX=rediss://

# Session Configuration
SESSION_CLEANUP_INTERVAL=120000 # 2 minutes in milliseconds
EMPTY_SESSION_TTL=3600  # 1 hour in seconds
SESSION_TTL=86400  # 24 hours in seconds
MAX_USERS_PER_SESSION=5

# RATE LIMITING CONFIGURATION - OPTIONAL

# JOIN event rate limits (10 per minute)
RATE_LIMIT_JOIN_WINDOW_MS=60000
RATE_LIMIT_JOIN_MAX=10

# CONTENT_CHANGE event rate limits (20 per second)
RATE_LIMIT_CONTENT_WINDOW_MS=1000
RATE_LIMIT_CONTENT_MAX=20

# TYPING_STATUS event rate limits (10 per second)
RATE_LIMIT_TYPING_WINDOW_MS=1000
RATE_LIMIT_TYPING_MAX=10

# SYNC_REQUEST event rate limits (5 per 10 seconds)
RATE_LIMIT_SYNC_WINDOW_MS=10000
RATE_LIMIT_SYNC_MAX=5